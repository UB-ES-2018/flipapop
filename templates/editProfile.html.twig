    <div class="col profile-header" align="right">
        <div class="logout-button">
            <a class="btn btn-text" href="{{ path('logout') }}">Logout</a>
        </div>
    </div>
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="row-fluid">
        <div class="row-fluid profile-block" align="center">
            <div class="profile-image-holder">
                {%  if user.image is not null%}
                    <img id="edit-profile-image" src="{{ vich_uploader_asset(user, 'imageFile') }}">
                {% endif %}
            </div>


            {{ form_row(form.imageFile) }}

        </div>
        <div class="row-fluid profile-block " align="center">
            {{ form_row(form.name) }}
            {{ form_row(form.surname) }}
        </div>
        <div class="row-fluid profile-block" align="center">
                {{ form_row(form.description) }}
            <button class="btn btn-primary" type="submit">Save changes</button>

        </div>
    </div>
    {{ form_end(form) }}


