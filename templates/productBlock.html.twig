<div class="row justify-content-center align-items-center">
    <div class="col">
        <div class="image-block">
            {%  if product.image is not null%}
                <img class="image-block-image" src="{{ vich_uploader_asset(product, 'imageFile') }}">
            {% endif %}
        </div>

    </div>

    <div class="col">
        {{ product.price }}$
    </div>
    <div class="col">
        {{ product.name }}
    </div>

    {% if tab == 'products' %}
    <div class="col" id="visibility-desc">
        <span><b>Visibilidad:</b></span>
        <span id="visibility-desc{{ product.id }}">
            {% if  product.visibility == 1%}
                Todos
            {% elseif product.visibility == 2 %}
                Logueados
            {% elseif product.visibility == 3 %}
                Solo yo
            {% endif %}
        </span>
         <span><a class="actionButton" data-id="{{ product.id }}" data-toggle="dropdown" href="#" title="Editar visiblididad"><i class="fas fa-caret-down"></i></a></span>
    </div>

        <div class="col">
            {% if app.user is not null and product.getSold() %}
                <i data-id="{{ product.id }}" class="fas fa-handshake sold fa-2x"></i>
            {% else %}
                <i data-id="{{ product.id }}" class="far fa-handshake fa-2x"></i>
            {% endif %}
        </div>
    {% else %}
    <div class="col">
        {{ product.description }}
    </div>
    {% endif %}
    <div class="col">
        {{ product.category.getName()}}
    </div>

</div>
