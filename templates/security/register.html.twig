git {% extends 'base/base.html.twig' %}
{% block body %}
    <div class="row centered" style="padding: 0 16px">
        <div class="col-lg-4 col-md-4  col-md-offset-3 registerform">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row" style="padding-left: 30px" >
                        <h5>Sign Up</h5>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row-fluid">

                        {{ form_errors(form) }}
                        {{ form_start(form, {'attr': {'class': 'container'}}) }}
                        <div class="row-fluid">
                            {{ form_row(form.name) }}
                            {{ form_row(form.surname) }}
                        </div>
                        <div class="row-fluid">
                            {{ form_row(form.email) }}
                            {{ form_row(form.plainPassword) }}
                        </div>

                        <button class="btn btn-primary" id="register" type="submit">Register!</button>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}











